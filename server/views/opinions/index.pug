extends ../layout/index
block content
    main.container.md-5
        h1.text-center.mb-5 #{page}

        .row
            .col-md-12
                blockquote.text-center Our customers opinions
                .row.testimoniales
                    each opinion in opinions
                        .col-md-6.col-lg-4.mb-4
                            .card
                                .card-body
                                    blockquote.blockquote
                                        p.mb-0
                                            | #{opinion.message}
                                        footer.blockquote-footer
                                            | #{opinion.name}
            .col-md-12
                h2.text-center Add an opinion
                    h6
                        if(errors)
                            each error in errors
                                .alert.alert-danger.text-center=error.message

                .row.justify-content-center
                    .col-md-8
                        form(action='/opinions',method='POST')
                            .form-group
                                label(for="name") Name
                                input(type="text",placeholder="Your name", name="name", id="name",class="form-control",value=name)
                            .form-group
                                label(for="email") Email
                                input(type="email",placeholder="Your Email Adress", name="email", id="email",class="form-control",value=email)
                            .form-group
                                label(for="message") Your opinion
                                textarea#msg(name="message",rows="3",placeholder="Please, let us know your experience here",class="form-control")=message
                            input.btn.btn-success.btn-block(type="submit")